<Window x:Class="CommunalPayments.Wpf.Views.DataViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunalPayments.Wpf.Views"
        mc:Ignorable="d"
        DataContext="{Binding Path=DataViewWindowModel, Source={StaticResource Locator}}"
        Title="{Binding Title}" 
        ResizeMode="CanMinimize"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0">
        </DataGrid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
        <Button Content="Обновить"
                Margin="10"/>
            <StackPanel Orientation="Horizontal"
                        Margin="10">
                <Button Content="Удалить строку" />
                <TextBox Text="Номер строки" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
